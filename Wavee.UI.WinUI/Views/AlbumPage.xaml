<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Wavee.UI.WinUI.Views.AlbumPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:trackList="using:Wavee.UI.WinUI.Controls.TrackList"
    xmlns:behaviors="using:Wavee.UI.WinUI.Behaviors"
    mc:Ignorable="d"
    NavigationCacheMode="Disabled"
    Background="Transparent">

    <Grid>
        <!-- Main content with TrackListView -->
        <trackList:TrackListView
            x:Name="TrackList"
            ViewModel="{x:Bind ViewModel, Mode=OneWay}"
            ItemsSource="{x:Bind ViewModel.FilteredTracks, Mode=OneWay}"
            IsLoading="{x:Bind ViewModel.IsLoadingTracks, Mode=OneWay}"
            ShowAlbumColumn="False"
            ShowDateAddedColumn="False"
            ShowArtistColumn="True"
            RemoveActionLabel="Remove from library"
            ArtistClicked="TrackList_ArtistClicked"
            NewPlaylistRequested="TrackList_NewPlaylistRequested">

            <!-- Page-specific Header -->
            <trackList:TrackListView.HeaderContent>
                <Grid Padding="8,20,8,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Album Cover Image -->
                    <Border Grid.Column="0"
                            Width="180" Height="180"
                            CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                            Margin="0,0,24,0">
                        <Grid>
                            <FontIcon Glyph="&#xE93C;" FontSize="64" Opacity="0.3"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Visibility="{x:Bind ViewModel.AlbumImageUrl, Mode=OneWay, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                            <Image Source="{x:Bind ViewModel.AlbumImageUrl, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}"
                                   Stretch="UniformToFill"
                                   Visibility="{x:Bind ViewModel.AlbumImageUrl, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                                   behaviors:ImageFallbackBehavior.HideOnError="True"
                                   behaviors:ImageFallbackBehavior.FadeInOnLoad="True"
                                   behaviors:ImageFallbackBehavior.DecodePixelWidth="360"/>
                        </Grid>
                    </Border>

                    <!-- Album Info -->
                    <StackPanel Grid.Column="1" Spacing="6" VerticalAlignment="Center">
                        <!-- Album type label -->
                        <TextBlock Text="{x:Bind ViewModel.AlbumType, Mode=OneWay}"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontWeight="SemiBold"
                                   CharacterSpacing="50"/>

                        <!-- Album name -->
                        <TextBlock Text="{x:Bind ViewModel.AlbumName, Mode=OneWay}"
                                   Style="{StaticResource TitleLargeTextBlockStyle}"
                                   MaxLines="2"
                                   TextTrimming="CharacterEllipsis"/>

                        <!-- Artist link -->
                        <HyperlinkButton
                            Content="{x:Bind ViewModel.ArtistName, Mode=OneWay}"
                            Click="Artist_Click"
                            Padding="0"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                        <!-- Year and track count -->
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                <Run Text="{x:Bind ViewModel.Year, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Text=" &#x2022; "
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                <Run Text="{x:Bind ViewModel.TotalTracks, Mode=OneWay}"/>
                                <Run Text="songs"/>
                            </TextBlock>
                            <TextBlock Text=" &#x2022; "
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Visibility="{x:Bind ViewModel.TotalDuration, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Text="{x:Bind ViewModel.TotalDuration, Mode=OneWay}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Visibility="{x:Bind ViewModel.TotalDuration, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Action buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                            <Button Style="{StaticResource AccentButtonStyle}"
                                    Command="{x:Bind ViewModel.PlayAlbumCommand}"
                                    Padding="16,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE768;" FontSize="14"/>
                                    <TextBlock Text="Play"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{x:Bind ViewModel.ShuffleAlbumCommand}" Padding="16,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8B1;" FontSize="14"/>
                                    <TextBlock Text="Shuffle"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{x:Bind ViewModel.ToggleSaveCommand}" Padding="12,8">
                                <FontIcon Glyph="{x:Bind ViewModel.IsSaved, Mode=OneWay, Converter={StaticResource BoolToHeartGlyphConverter}}" FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </trackList:TrackListView.HeaderContent>

            <!-- Empty State -->
            <trackList:TrackListView.EmptyStateContent>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                    <FontIcon Glyph="&#xE93C;" FontSize="48" Opacity="0.3"/>
                    <TextBlock
                        Text="No tracks available"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Opacity="0.5"
                        TextAlignment="Center"/>
                </StackPanel>
            </trackList:TrackListView.EmptyStateContent>
        </trackList:TrackListView>
    </Grid>
</Page>
