<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Wavee.UI.WinUI.Views.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Wavee.UI.WinUI.ViewModels"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel
            MaxWidth="800"
            Margin="48,80,48,48"
            HorizontalAlignment="Center"
            Spacing="48">

            <!-- Header Section -->
            <StackPanel Spacing="24" HorizontalAlignment="Center">
                <TextBlock
                    Text="What are you looking for?"
                    Style="{StaticResource TitleLargeTextBlockStyle}"
                    FontSize="32"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"/>

                <!-- Search Box -->
                <AutoSuggestBox
                    x:Name="SearchBox"
                    Width="400"
                    PlaceholderText="Search songs, artists, albums..."
                    QueryIcon="Find"
                    QuerySubmitted="SearchBox_QuerySubmitted"/>
            </StackPanel>

            <!-- Quick Access Section -->
            <StackPanel Spacing="16">
                <TextBlock
                    Text="Quick Access"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>

                <ItemsRepeater ItemsSource="{x:Bind ViewModel.QuickAccessItems}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout
                            MinItemWidth="150"
                            MinItemHeight="100"
                            MinColumnSpacing="12"
                            MinRowSpacing="12"
                            ItemsStretch="Fill"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="vm:QuickAccessItem">
                            <Button
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Padding="16"
                                CornerRadius="8"
                                Click="QuickAccess_Click"
                                Tag="{x:Bind}">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <FontIcon
                                        Glyph="{x:Bind Glyph}"
                                        FontSize="28"/>
                                    <TextBlock
                                        Text="{x:Bind Title}"
                                        FontSize="14"
                                        FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>

            <!-- Recently Played Section -->
            <StackPanel Spacing="16">
                <TextBlock
                    Text="Recently Played"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>

                <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled">
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.RecentItems}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="16"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="vm:RecentItem">
                                <Button
                                    Width="150"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="8"
                                    Click="RecentItem_Click"
                                    Tag="{x:Bind}">
                                    <StackPanel Spacing="8">
                                        <!-- Image placeholder -->
                                        <Grid
                                            Width="150"
                                            Height="150"
                                            CornerRadius="8"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                            <FontIcon
                                                Glyph="&#xE8D6;"
                                                FontSize="40"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </Grid>
                                        <!-- Title -->
                                        <TextBlock
                                            Text="{x:Bind Title}"
                                            FontWeight="SemiBold"
                                            MaxLines="1"
                                            TextTrimming="CharacterEllipsis"/>
                                        <!-- Subtitle -->
                                        <TextBlock
                                            Text="{x:Bind Subtitle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontSize="12"
                                            MaxLines="1"
                                            TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
