<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Wavee.UI.WinUI.Views.ArtistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Wavee.UI.WinUI.ViewModels"
    xmlns:behaviors="using:Wavee.UI.WinUI.Behaviors"
    xmlns:converters="using:Wavee.UI.WinUI.Converters"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="InverseNullToVisibilityConverter" Invert="True"/>
    </Page.Resources>

    <Grid>
        <!-- Responsive layout states -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SecondColumn.Width" Value="0"/>
                        <Setter Target="Column2Repeater.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- Loading indicator -->
        <ProgressRing
            IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
            Width="48"
            Height="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <ScrollView VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="24" Spacing="24">
                <!-- Artist header -->
                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Artist image container for connected animation -->
                    <Grid x:Name="ArtistImageContainer" Width="200" Height="200">
                        <Ellipse Width="200" Height="200">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{ThemeResource CardBackgroundFillColorDefault}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <FontIcon
                            Glyph="&#xE77B;"
                            FontSize="64"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{x:Bind ViewModel.ArtistImageUrl, Mode=OneWay, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                        <Ellipse
                            Width="200"
                            Height="200"
                            Visibility="{x:Bind ViewModel.ArtistImageUrl, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                            <Ellipse.Fill>
                                <ImageBrush
                                    ImageSource="{x:Bind ViewModel.ArtistImageUrl, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}"
                                    Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>

                    <!-- Artist info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                        <TextBlock Text="Artist" Style="{StaticResource CaptionTextBlockStyle}"/>
                        <TextBlock
                            Text="{x:Bind ViewModel.ArtistName, Mode=OneWay}"
                            FontSize="48"
                            FontWeight="Bold"/>
                        <TextBlock
                            Text="{x:Bind ViewModel.MonthlyListeners, Mode=OneWay}"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Opacity="0.7"/>

                        <!-- Action buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                            <Button
                                Style="{StaticResource AccentButtonStyle}"
                                Command="{x:Bind ViewModel.PlayTopTracksCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE768;" FontSize="16"/>
                                    <TextBlock Text="Play"/>
                                </StackPanel>
                            </Button>
                            <Button
                                Style="{StaticResource TransparentButtonStyle}"
                                Command="{x:Bind ViewModel.ToggleFollowCommand}">
                                <TextBlock Text="{x:Bind ViewModel.IsFollowing, Mode=OneWay, Converter={StaticResource BoolToFollowTextConverter}}"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Top tracks section with pagination -->
                <StackPanel Spacing="16">
                    <!-- Header with navigation -->
                    <Grid>
                        <TextBlock Text="Popular" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <!-- PipsPager with built-in navigation -->
                        <PipsPager
                            x:Name="TracksPipsPager"
                            HorizontalAlignment="Right"
                            NumberOfPages="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                            SelectedPageIndex="{x:Bind ViewModel.CurrentPage, Mode=TwoWay}"
                            PreviousButtonVisibility="VisibleOnPointerOver"
                            NextButtonVisibility="VisibleOnPointerOver"/>
                    </Grid>

                    <!-- 2-column grid of tracks -->
                    <Grid x:Name="TracksGrid" ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition x:Name="SecondColumn" Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Column 1: Tracks 1-5 -->
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Column1Tracks, Mode=OneWay}">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Vertical" Spacing="4"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="vm:ArtistTopTrack">
                                    <Grid Padding="8" ColumnSpacing="12" Height="56">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Text="{x:Bind Index}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Opacity="0.7"/>

                                        <Grid
                                            Grid.Column="1"
                                            Width="40"
                                            Height="40"
                                            CornerRadius="4"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                            <FontIcon
                                                Glyph="&#xE8D6;"
                                                FontSize="16"
                                                Visibility="{x:Bind AlbumImageUrl, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                                            <Image
                                                Source="{x:Bind AlbumImageUrl, Converter={StaticResource StringToImageSourceConverter}}"
                                                Stretch="UniformToFill"
                                                Visibility="{x:Bind AlbumImageUrl, Converter={StaticResource NullToVisibilityConverter}}"
                                                behaviors:ImageFallbackBehavior.HideOnError="True"
                                                behaviors:ImageFallbackBehavior.FadeInOnLoad="True"
                                                behaviors:ImageFallbackBehavior.DecodePixelWidth="80"/>
                                        </Grid>

                                        <TextBlock
                                            Grid.Column="2"
                                            Text="{x:Bind Title}"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            VerticalAlignment="Center"
                                            TextTrimming="CharacterEllipsis"
                                            MaxLines="1"/>

                                        <TextBlock
                                            Grid.Column="3"
                                            Text="{x:Bind Duration}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            VerticalAlignment="Center"
                                            Opacity="0.7"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>

                        <!-- Column 2: Tracks 6-10 -->
                        <ItemsRepeater x:Name="Column2Repeater" Grid.Column="1" ItemsSource="{x:Bind ViewModel.Column2Tracks, Mode=OneWay}">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Vertical" Spacing="4"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="vm:ArtistTopTrack">
                                    <Grid Padding="8" ColumnSpacing="12" Height="56">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Text="{x:Bind Index}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Opacity="0.7"/>

                                        <Grid
                                            Grid.Column="1"
                                            Width="40"
                                            Height="40"
                                            CornerRadius="4"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                            <FontIcon
                                                Glyph="&#xE8D6;"
                                                FontSize="16"
                                                Visibility="{x:Bind AlbumImageUrl, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                                            <Image
                                                Source="{x:Bind AlbumImageUrl, Converter={StaticResource StringToImageSourceConverter}}"
                                                Stretch="UniformToFill"
                                                Visibility="{x:Bind AlbumImageUrl, Converter={StaticResource NullToVisibilityConverter}}"
                                                behaviors:ImageFallbackBehavior.HideOnError="True"
                                                behaviors:ImageFallbackBehavior.FadeInOnLoad="True"
                                                behaviors:ImageFallbackBehavior.DecodePixelWidth="80"/>
                                        </Grid>

                                        <TextBlock
                                            Grid.Column="2"
                                            Text="{x:Bind Title}"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            VerticalAlignment="Center"
                                            TextTrimming="CharacterEllipsis"
                                            MaxLines="1"/>

                                        <TextBlock
                                            Grid.Column="3"
                                            Text="{x:Bind Duration}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            VerticalAlignment="Center"
                                            Opacity="0.7"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </Grid>
                </StackPanel>

                <!-- Albums section -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Discography" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <ScrollView HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Albums, Mode=OneWay}">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal" Spacing="16"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="vm:ArtistAlbum">
                                    <Button
                                        Width="180"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Tag="{x:Bind Id}"
                                        Click="Album_Click"
                                        PointerPressed="Album_PointerPressed">
                                        <StackPanel Spacing="8">
                                            <Grid
                                                Width="180"
                                                Height="180"
                                                CornerRadius="8"
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                                <FontIcon
                                                    Glyph="&#xE93C;"
                                                    FontSize="48"
                                                    Visibility="{x:Bind ImageUrl, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                                                <Image
                                                    Source="{x:Bind ImageUrl, Converter={StaticResource StringToImageSourceConverter}}"
                                                    Stretch="UniformToFill"
                                                    Visibility="{x:Bind ImageUrl, Converter={StaticResource NullToVisibilityConverter}}"
                                                    behaviors:ImageFallbackBehavior.HideOnError="True"
                                                    behaviors:ImageFallbackBehavior.FadeInOnLoad="True"
                                                    behaviors:ImageFallbackBehavior.DecodePixelWidth="180"/>
                                            </Grid>
                                            <TextBlock
                                                Text="{x:Bind Title}"
                                                Style="{StaticResource TrackTitleTextBlockStyle}"
                                                MaxLines="1"/>
                                            <TextBlock
                                                Style="{StaticResource ArtistNameTextBlockStyle}">
                                                <Run Text="{x:Bind Year}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{x:Bind AlbumType}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollView>
                </StackPanel>
            </StackPanel>
        </ScrollView>
    </Grid>
</Page>
