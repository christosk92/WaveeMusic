<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Wavee.UI.WinUI.Views.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SelectorBar with consistent padding -->
        <SelectorBar
            x:Name="LibrarySelectorBar"
            Margin="12,0,24,0" 
            SelectionChanged="SelectorBar_SelectionChanged">
            <SelectorBarItem x:Name="AlbumsItem" Text="Albums" IsSelected="True"/>
            <SelectorBarItem x:Name="ArtistsItem" Text="Artists"/>
            <SelectorBarItem x:Name="LikedSongsItem" Text="Liked Songs"/>
        </SelectorBar>

        <!-- Content area with scroll -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,16,24,24">
            <Grid>
                <!-- Albums content -->
                <StackPanel x:Name="AlbumsContent" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                    <StackPanel.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="100" FromVerticalOffset="0"/>
                        </TransitionCollection>
                    </StackPanel.Transitions>
                    <FontIcon Glyph="&#xE93C;" FontSize="48" Opacity="0.3"/>
                    <TextBlock Text="Albums coming soon..." Style="{StaticResource BodyTextBlockStyle}" Opacity="0.5" TextAlignment="Center"/>
                </StackPanel>

                <!-- Artists content -->
                <StackPanel x:Name="ArtistsContent" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12" Visibility="Collapsed">
                    <StackPanel.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="100" FromVerticalOffset="0"/>
                        </TransitionCollection>
                    </StackPanel.Transitions>
                    <FontIcon Glyph="&#xE77B;" FontSize="48" Opacity="0.3"/>
                    <TextBlock Text="Artists coming soon..." Style="{StaticResource BodyTextBlockStyle}" Opacity="0.5" TextAlignment="Center"/>
                </StackPanel>

                <!-- Liked Songs content -->
                <StackPanel x:Name="LikedSongsContent" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12" Visibility="Collapsed">
                    <StackPanel.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition FromHorizontalOffset="100" FromVerticalOffset="0"/>
                        </TransitionCollection>
                    </StackPanel.Transitions>
                    <FontIcon Glyph="&#xEB52;" FontSize="48" Opacity="0.3"/>
                    <TextBlock Text="Liked Songs coming soon..." Style="{StaticResource BodyTextBlockStyle}" Opacity="0.5" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
