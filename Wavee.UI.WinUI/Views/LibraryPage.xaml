<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Wavee.UI.WinUI.Views.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SelectorBar with consistent padding -->
        <SelectorBar
            x:Name="LibrarySelectorBar"
            Margin="12,0,24,0"
            SelectionChanged="SelectorBar_SelectionChanged">
            <SelectorBarItem x:Name="AlbumsItem" Text="Albums" IsSelected="True"/>
            <SelectorBarItem x:Name="ArtistsItem" Text="Artists"/>
            <SelectorBarItem x:Name="LikedSongsItem" Text="Liked Songs"/>
        </SelectorBar>

        <!-- Content area -->
        <Grid Grid.Row="1" Padding="24,8,24,0">
            <Frame x:Name="ContentFrame"/>
        </Grid>
    </Grid>
</Page>
