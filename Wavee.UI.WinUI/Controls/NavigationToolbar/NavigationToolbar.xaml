<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Wavee.UI.WinUI.Controls.NavigationToolbar.NavigationToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wavee.UI.WinUI.Controls.NavigationToolbar"
    xmlns:omnibar="using:Wavee.UI.WinUI.Controls.Omnibar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Disabled button state overrides (match Files app) -->
            <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent" />
            <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent" />
            <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="{ThemeResource TextFillColorDisabled}" />

            <!-- Navigation button style -->
            <Style x:Key="NavigationButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                <Setter Property="Width" Value="36" />
                <Setter Property="Height" Value="32" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{ThemeResource App.Theme.IconBaseBrush}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid
        Height="48"
        Padding="4,0,4,0"
        ColumnSpacing="4"
        Background="{ThemeResource App.Theme.AddressBar.BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Buttons -->
        <StackPanel
            Grid.Column="0"
            Orientation="Horizontal"
            Spacing="2">

            <!-- Back Button -->
            <Button
                x:Name="BackButton"
                Style="{StaticResource NavigationButtonStyle}"
                ToolTipService.ToolTip="Back"
                IsEnabled="{x:Bind CanGoBack, Mode=OneWay}"
                Click="BackButton_Click">
                <FontIcon FontSize="14" Glyph="&#xE72B;" />
            </Button>

            <!-- Forward Button -->
            <Button
                x:Name="ForwardButton"
                Style="{StaticResource NavigationButtonStyle}"
                ToolTipService.ToolTip="Forward"
                IsEnabled="{x:Bind CanGoForward, Mode=OneWay}"
                Click="ForwardButton_Click">
                <FontIcon FontSize="14" Glyph="&#xE72A;" />
            </Button>

            <!-- Home Button with Selection Indicator -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button
                    x:Name="HomeButton"
                    Grid.Row="0"
                    Style="{StaticResource NavigationButtonStyle}"
                    ToolTipService.ToolTip="Home"
                    Click="HomeButton_Click">
                    <FontIcon FontSize="14" Glyph="&#xE80F;" />
                </Button>

                <!-- Selection Indicator Pill -->
                <Rectangle
                    Grid.Row="1"
                    Width="16"
                    Height="3"
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    Fill="{ThemeResource AccentFillColorDefaultBrush}"
                    RadiusX="2"
                    RadiusY="2"
                    Visibility="{x:Bind IsOnHomePage, Mode=OneWay}" />
            </Grid>

            <!-- Refresh Button (optional) -->
            <Button
                x:Name="RefreshButton"
                Style="{StaticResource NavigationButtonStyle}"
                ToolTipService.ToolTip="Refresh"
                Click="RefreshButton_Click"
                Visibility="Collapsed">
                <FontIcon FontSize="14" Glyph="&#xE72C;" />
            </Button>
        </StackPanel>

        <!-- Omnibar / Search Box -->
        <omnibar:Omnibar
            x:Name="SearchOmnibar"
            Grid.Column="1"
            Margin="8,0"
            PlaceholderText="Search songs, artists, albums..."
            QuerySubmitted="SearchOmnibar_QuerySubmitted"
            TextChanged="SearchOmnibar_TextChanged" />

        <!-- Right-side actions -->
        <StackPanel
            Grid.Column="2"
            Orientation="Horizontal"
            Spacing="2">

            <!-- Profile Button with Selection Indicator -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button
                    x:Name="ProfileButton"
                    Grid.Row="0"
                    Style="{StaticResource NavigationButtonStyle}"
                    Width="Auto"
                    Padding="4,0,8,0"
                    ToolTipService.ToolTip="Profile"
                    Click="ProfileButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <PersonPicture
                            Width="24"
                            Height="24"
                            DisplayName="{x:Bind UserDisplayName, Mode=OneWay}" />
                        <TextBlock
                            Text="{x:Bind UserDisplayName, Mode=OneWay}"
                            VerticalAlignment="Center"
                            FontSize="12" />
                    </StackPanel>
                </Button>

                <!-- Selection Indicator Pill -->
                <Rectangle
                    Grid.Row="1"
                    Width="16"
                    Height="3"
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    Fill="{ThemeResource AccentFillColorDefaultBrush}"
                    RadiusX="2"
                    RadiusY="2"
                    Visibility="{x:Bind IsOnProfilePage, Mode=OneWay}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
