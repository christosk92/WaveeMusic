<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Wavee.WinUI.Controls"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:winUi="using:CommunityToolkit.WinUI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Animations/CardAnimations.xaml" />
        <ResourceDictionary Source="/Themes/Styles/ButtonStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  ShadowButton Control Template  -->
    <Style TargetType="controls:ShadowButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:ShadowButton">
                    <Grid x:Name="RootGrid" winUi:VisualExtensions.NormalizedCenterPoint="0.5, 0.5">
                        <winUi:Effects.Shadow>
                            <media:AttachedCardShadow
                                BlurRadius="50"
                                CornerRadius="8"
                                Opacity="0"
                                Offset="0"
                                Color="{TemplateBinding ShadowColor}" />
                        </winUi:Effects.Shadow>

                        <!--
                            Animations are now triggered via code-behind event handlers in ShadowButton.cs
                            for Native AOT/trim safety (EventTriggerBehavior uses reflection)
                        -->

                        <Border
                            x:Name="CardBorder"
                            Padding="6,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <ContentPresenter />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
