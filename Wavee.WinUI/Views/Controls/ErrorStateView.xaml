<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Wavee.WinUI.Views.Controls.ErrorStateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Wavee.WinUI.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        MaxWidth="500"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Error Icon  -->
        <Viewbox
            Width="64"
            Height="64"
            Margin="0,0,0,24">
            <FontIcon
                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                Glyph="&#xE7BA;" />
        </Viewbox>

        <!--  Title  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,12"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="SemiBold"
            Text="{x:Bind Title, Mode=OneWay}"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <!--  Message  -->
        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,24"
            HorizontalAlignment="Center"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Text="{x:Bind Message, Mode=OneWay}"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <!--  Error Details (Expandable)  -->
        <Expander
            Grid.Row="3"
            Margin="0,0,0,24"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Header="Show Error Details"
            Visibility="{x:Bind Details, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
            <ScrollView MaxHeight="200" HorizontalScrollBarVisibility="Auto">
                <TextBlock
                    FontFamily="Consolas"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind Details, Mode=OneWay}"
                    TextWrapping="Wrap" />
            </ScrollView>
        </Expander>

        <!--  Retry Button  -->
        <Button
            Grid.Row="4"
            HorizontalAlignment="Center"
            Command="{x:Bind RetryCommand, Mode=OneWay}"
            Style="{StaticResource AccentButtonStyle}"
            Visibility="{x:Bind ShowRetryButton, Mode=OneWay}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    FontSize="16"
                    Glyph="&#xE72C;" />
                <TextBlock Text="Retry" />
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
